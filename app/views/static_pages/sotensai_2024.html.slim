    .container[data-aos="fade-up" data-aos-delay="100"]
      .row.gy-4.justify-content-center
        .col-lg-10
          .row.gy-4
            .col-12
              h3
                | 蒼天祭2024 メインポスター
            .col-12
              img.img_fluid[src=asset_path("scaffold-theme/sotensai2024-main.png") alt=""]
